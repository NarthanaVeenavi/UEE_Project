<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity"
    tools:ignore="MissingClass">

    <RelativeLayout
        android:id="@+id/r5"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/pink_500"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/colorPrimaryDark" >
    </RelativeLayout>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_menu"
        android:background="@color/pink_500"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Cake Hut"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="13dp"/>


    <ImageView
        android:id="@+id/product_image_details"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_marginTop="62dp"
        android:scaleType="centerCrop"
        />

    <ImageButton
        android:id="@+id/search_btn"
        android:layout_width="50dp"
        android:layout_height="38dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/ic_favou"
        android:padding="9dp"
        android:textSize="13dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/product_name_details"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@+id/product_image_details"
        android:text="Product Name"
        android:fontFamily="sans-serif-condensed-light"
        android:textColor="@color/pink_500"
        android:textStyle="bold"
        android:textSize="19dp"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/product_description_details"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/product_name_details"
        android:text="Product Description"
        android:textStyle="bold"
        android:textSize="13dp"
        android:textColor="#676161"
        android:gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingLeft="15dp"/>
    <TextView
        android:id="@+id/product_stock_details"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:text="In Stock"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        android:gravity="right"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/product_price_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_description_details"
        android:text="Product Price"
        android:textColor="@color/pink_500"
        android:fontFamily="sans-serif-condensed-light"
        android:textStyle="bold"
        android:textSize="17dp"
        android:gravity="left"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:paddingLeft="15dp"/>

    <TextView
        android:id="@+id/product_weight_text"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_description_details"
        android:text="Weight *"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed-light"
        android:textStyle="bold"
        android:textSize="17dp"
        android:gravity="left"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="5dp"
        android:paddingLeft="15dp"/>

    <Spinner
        android:id="@+id/product_weight"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/product_price_details"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/border1"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_arrow_down"
        android:layout_marginLeft="345dp"
        android:layout_marginTop="430dp"
        android:layout_marginRight="25dp"/>
    <TextView
        android:id="@+id/product_message_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Message to write on cake"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed-light"
        android:textStyle="bold"
        android:textSize="17dp"
        android:gravity="left"
        android:layout_marginTop="474dp"
        android:layout_marginLeft="5dp"
        android:paddingLeft="15dp"/>

    <EditText
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:background="@drawable/border1"
        android:layout_marginTop="505dp"
        android:layout_marginLeft="15dp"
        android:paddingLeft="15dp"
        android:layout_marginRight="15dp"/>

    <CheckBox
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="580dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="It is a surprise gift"
        android:textColor="@color/black"
        android:textColorLink="@color/pink_500"
        android:textSize="17dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/product_qty_text"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Quantity *"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed-light"
        android:textStyle="bold"
        android:textSize="17dp"
        android:gravity="left"
        android:layout_marginTop="640dp"
        android:layout_marginLeft="5dp"
        android:paddingLeft="15dp"/>

    <Button
        android:id="@+id/pd_add_to_cart_button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:text="Add to Cart"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="622dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/border1"/>

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/number_btn"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:elevation="4dp"
        app:textSize="8sp"
        app:initialNumber="1"
        app:backGroundColor="@color/grey"
        app:textColor="@color/black"
        app:finalNumber="20"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/product_price_details"
        android:layout_marginTop="210dp"
        app:backgroundDrawable="@drawable/border1"
        ></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

<!--    <com.google.android.material.floatingactionbutton.FloatingActionButton-->
<!--        android:id="@id/add_to_cart_btn"-->
